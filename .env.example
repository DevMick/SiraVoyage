# Configuration d'environnement pour SiraVoyage - AL BAYT
# Copiez ce fichier vers .env et remplissez les valeurs

# Configuration du serveur
NODE_ENV=development
PORT=3000
HOST=localhost

# Base de données (si utilisée dans le futur)
# DB_HOST=localhost
# DB_PORT=3306
# DB_NAME=sira_voyage
# DB_USER=your_db_user
# DB_PASSWORD=your_db_password

# Configuration email (pour les formulaires de contact)
# SMTP_HOST=smtp.gmail.com
# SMTP_PORT=587
# SMTP_USER=your_email@gmail.com
# SMTP_PASSWORD=your_app_password
# FROM_EMAIL=noreply@omrahajjabidjan.com

# Clés API externes (si utilisées)
# GOOGLE_MAPS_API_KEY=your_google_maps_key
# PAYMENT_API_KEY=your_payment_gateway_key
# ANALYTICS_ID=your_google_analytics_id

# Configuration de sécurité
# JWT_SECRET=your_super_secret_jwt_key
# SESSION_SECRET=your_session_secret

# URLs et domaines
SITE_URL=http://localhost:3000
DOMAIN=localhost

# Configuration des uploads (si nécessaire)
# MAX_FILE_SIZE=5242880
# UPLOAD_PATH=./uploads

# Configuration des logs
LOG_LEVEL=info
LOG_FILE=./logs/app.log
